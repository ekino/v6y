{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "ES2021.String",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "module": "ESNext",
    "target": "ES2023",
    "downlevelIteration": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "./dist/types",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": ["vitest/globals", "@testing-library/jest-dom"],
  },
  "include": [
    "next-env.d.ts",
    "./src/*.ts",
    "./src/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./vitest.setup.ts"
  ]
}
