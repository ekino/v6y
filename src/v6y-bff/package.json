    "chai": "=4.3.10",
    "eslint": "=9.0.0",
    "eslint-config-prettier": "=9.1.0",
    "eslint-plugin-prettier": "=5.2.1",
    "nodemon": "=3.1.7",
    "pm2": "=5.3.0",
    "ts-node": "=10.9.2",
    "typescript": "=5.6.2",
    "typescript-eslint": "=8.7.0",
    "vitest": "=2.0.5"
  },
  "dependencies": {
    "@apollo/server": "=4.2.1",
    "@types/body-parser": "=1.19.5",
    "@types/express": "=5.0.0",
