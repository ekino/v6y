    "apollo-server-plugin-response-cache": "=3.7.0",
    "axios": "=1.6.2",
    "axios-retry": "=4.0.0",
    "body-parser": "=1.20.1",
    "cors": "=2.8.5",
    "express": "=4.18.2",
    "express-status-monitor": "=1.3.4",
